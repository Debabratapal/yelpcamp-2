 <% include ../partials/header %>



<div class="container">
      <header class="jumbotron">
            <div class="container">
                  <h2>This to our campgrounds page!!</h2>
                  <p>These are the campgrounds that we have from all over the world</p>
                  <a class="btn btn-primary" href="campground/new">add new campground</a>
            </div>
      </header>

      <div class="row text-center">
            <% campground.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                  <div class="thumbnail">
                        <img src="<%= campground.image %>">
                        <div class="caption">
                              <h4><%= campground.name %></h4>
                              <p>
                                    <a href="/campground/<%= campground._id %>" class="btn btn-primary">Read More</a>
                              </p>
                        </div>
                  </div>
            </div>
            <% }); %>
      </div>

</div>
<% include ../partials/footer %>